@page "/"
@model Chirp.Razor.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    
    int pageNumber = Model.pageNumber;

}

<div xmlns="http://www.w3.org/1999/html">
    
    <CheepList Cheeps="Model.Cheeps"/>

    <h2> Public Timeline </h2>

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        <small>&mdash; @cheep.Timestamp</small> <br>
                        @cheep.Message
                        
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }

    <div style="text-align: center;">
        <div style="display: inline-block;">
            @if (@pageNumber != 1)
            {
                <a href="/?page=@(pageNumber - 1)" style="text-decoration: none; margin-right: 15px;">
                    <button style="display: inline; margin: 0;">&lt;</button> <!-- Escaped the "<" character -->
                </a>

            }
            <p style="display: inline; margin: 0; margin-right: 15px;">Page @pageNumber</p>
            <a href="/?page=@(pageNumber + 1)" style="text-decoration: none;">
                <button style="display: inline; margin: 0;">&gt;</button> <!-- Escaped the ">" character -->
            </a>
        </div>
    </div>

</div>