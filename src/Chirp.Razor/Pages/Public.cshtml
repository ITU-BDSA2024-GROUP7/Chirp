@page "/"
@using Chirp.Razor
@model Chirp.Razor.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    
    int pageNumber = Model.PageNumber;
    int totalPages = Model.TotalPageNumber;

}

<div xmlns="http://www.w3.org/1999/html">
    <div class="timeline-header">
        <h2> Public Timeline </h2>
    </div>

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.AuthorName">@cheep.AuthorName</a>
                        </strong>
                        <small>&mdash; @cheep.FormattedTimeStamp</small> <br>
                        @cheep.Text

                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }

    <div style="text-align: center;">
        <div style="display: inline-block;">
            @if (@pageNumber != 1)
            {
                <a href="/?page=1" style="text-decoration: none;">
                    <button style="display: inline; margin: 0;">&lt;&lt;</button> <!-- Escaped the "<" character -->
                </a>
                <a href="/?page=@(pageNumber - 1)" style="text-decoration: none; margin-right: 15px;">
                    <button style="display: inline; margin: 0;">&lt;</button> <!-- Escaped the "<" character -->
                </a>

            }
            <p style="display: inline; margin: 0; margin-right: 15px;">Page @pageNumber / @totalPages</p>
            @if (@pageNumber != @totalPages)
            {
                <a href="/?page=@(pageNumber + 1)" style="text-decoration: none;">
                    <button style="display: inline; margin: 0;">&gt;</button> <!-- Escaped the ">" character -->
                </a>
                <a href="/?page=@totalPages" style="text-decoration: none;">
                    <button style="display: inline; margin: 0;">&gt;&gt;</button> <!-- Escaped the ">" character -->
                </a>
            }
        </div>
    </div>

</div>