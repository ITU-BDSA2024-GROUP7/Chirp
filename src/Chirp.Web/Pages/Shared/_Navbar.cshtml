<div class=navigation>
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <div>
            <a href="/@(User.Identity.Name)"> <img src="/images/Home.svg" alt="Home Symbol"/>My timeline</a> |
            <a href="/"><img src="/images/Home.svg" alt="Home Symbol"/> Public timeline</a> |
            <a href="/identity/Account/Manage"> <img src="/images/User.svg" alt="Login Symbol"/>  Manage account</a> | 
            <a href="/Identity/Account/Logout"> <img src="/images/ArrowRightStartOnRectangle.svg" alt="Login Symbol"/> Logout [@(User.Identity.Name)]</a>
        </div>
    }
    else
    {
        <div>
            <a href="/"> <img src="/images/Home.svg" alt="Home Symbol"/> Timeline</a> |
            <a href="/Identity/Account/Register"> <img src="/images/PencilSquare.svg" alt="Register Symbol"/> Register</a>
            <a href="/Identity/Account/Login"> <img src="/images/User.svg" alt="Login Symbol"/> Login</a>
        </div>
    }
</div>