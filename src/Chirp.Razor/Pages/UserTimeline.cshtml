@page "/{author}"
@model Chirp.Razor.Pages.UserTimelineModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var authorName = HttpContext.GetRouteValue("author");
    
    int pageNumber;
    if (!Request.Query.ContainsKey("page"))
    {
        pageNumber = 1;
    }
    else
    {
        pageNumber = int.Parse(Request.Query["page"]);
    }
}

<div>
    <h2> @authorName's Timeline </h2>

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        @cheep.Message
                        <small>&mdash; @cheep.Timestamp</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
    
    <div>
        @if (@pageNumber != 1)
        {
            <a href="/@authorName?page=@(pageNumber - 1)"><p>Previous Page: @(pageNumber - 1)</p></a>
        }
        <p>Current page: @pageNumber</p>
        <a href="/@authorName?page=@(pageNumber + 1)"><p>Next Page: @(pageNumber + 1)</p></a>
    </div>
</div>
